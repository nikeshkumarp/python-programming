def credit(Amount,value):
    Amount +=value
    print(Amount)
    return Amount



def debit(Amount,value):
    Amount=Amount-value
    print(Amount)
    return Amount


def showbalance(Amount):
    print("balance amount in u r account:",Amount)
    





Amount=0
Amount=credit(Amount,1500)
Amount=debit(Amount,150)
showbalance(Amount)
